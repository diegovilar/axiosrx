{
  "defaultSeverity": "warn",
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "../node_modules/codelyzer"
  ],
  "jsRules": {},
  "rules": {
    "import-blacklist": {
      "severity": "error",
      "options": [
        "rxjs",
        "rxjs/Rx",
        "rxjs/operators"
      ]
    }
  },
  "linterOptions": {
    "exclude": [
      "**/*.d.ts"
    ]
  }
}
