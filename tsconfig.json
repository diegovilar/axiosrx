{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./build",
    "noEmit": true,
    "target": "es5",
    "module": "es2015",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "pretty": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true, // only on TS 2.7+
    "esModuleInterop": true,              // only on TS 2.7+
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "newLine": "LF",
    "charset": "utf-8",
    "lib": [
      "es2015"
    ]
  }
}
