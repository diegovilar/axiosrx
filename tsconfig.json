{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "importHelpers": true,
    "noEmitHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "pretty": true,
    "strictNullChecks": true,
    // "strictPropertyInitialization": true, // usar quando mudar para typescript 2.7.0
    // "esModuleInterop": true, // usar quando mudar para typescript 2.7.0
    "strictFunctionTypes": false, // rxjs ainda nao est√° pronto para isso
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "newLine": "LF",
    "charset": "utf-8",
    "lib": [
      "es5",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
