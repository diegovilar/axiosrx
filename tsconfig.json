{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "es2015",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "pretty": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "strictFunctionTypes": true, // use on IDE, but disable for builds otherwise many packages (ie. rxjs) won't work
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "newLine": "LF",
    "charset": "utf-8",
    "lib": [
      "es2015",
      "es2015.promise",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
