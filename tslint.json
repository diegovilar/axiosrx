{
  "defaultSeverity": "warn",
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "linterOptions": {
    "exclude": [
      "./*.ts",
      "**/*.d.ts",
      "test/**/*",
      "scripts/**/*"
    ]
  },
  "rules": {
    "import-blacklist": {
      "severity": "error",
      "options": [
        "rxjs",
        "rxjs/",
        "rxjs/Rx",
        "rxjs/Rx/",
        "rxjs/add/observable",
        "rxjs/add/observable/",
        "rxjs/add/operator",
        "rxjs/add/operator/",
        "rxjs/symbol",
        "rxjs/symbol/",
        "rxjs/scheduler",
        "rxjs/scheduler/",
        "rxjs/observable",
        "rxjs/observable/",
        "rxjs/operator",
        "rxjs/operator/",
        "rxjs/operators",
        "rxjs/operators/"
      ]
    }
  },
  "jsRules": {}
}
