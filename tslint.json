{
  "defaultSeverity": "warn",
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "linterOptions": {
    "exclude": [
      "./*.ts",
      "**/*.d.ts",
      "test/**/*",
      "scripts/**/*"
    ]
  },
  "rules": {
    "import-blacklist": {
      "severity": "error",
      "options": [
        "rxjs",
        "rxjs/Rx",
        "rxjs/operators"
      ]
    }
  },
  "jsRules": {}
}
